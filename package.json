{
  "scripts": {
    "init:tailwindcss": "tailwindcss -o ./tailwind.css",
    "build:tailwindcss": "NODE_ENV=production tailwindcss -c ./tailwind.config.js -o ./tailwind.css --minify",
    "build": "npm run build:tailwindcss && cargo install trunk && npm run install:rust && rustup target add wasm32-unknown-unknown && trunk build --release",
    "install:rust": "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "tailwindcss": "^3.0.24"
  }
}